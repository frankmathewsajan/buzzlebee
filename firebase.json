{
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/projects",
        "destination": "/projects.html"
      },
      {
        "source": "/case-studies",
        "destination": "/case-studies.html"
      },
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "**",
        "destination": "/404.html"
      }
    ]
  }
}
